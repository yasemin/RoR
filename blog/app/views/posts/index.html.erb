<h1>OUR BLOG</h1>

<% for post in @posts -%>
  <h2><%= link_to post.title, post %></h2>
  <p><%= post.content %></p>
  <p><%= link_to "Edit", edit_post_path(post) %> |
    <%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %></p>
   <hr/>

<%end%>

<p><%= link_to "Add a new Post", new_post_path %><p>